<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 내부 상자를 그리는 shape -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 내부 상자 색상(흰색) -->
            <corners android:radius="10dp" /> <!-- 내부 상자 둥근 모서리 반지름(10% 화면의 폭) -->
        </shape>
    </item>

    <!-- 테두리를 그리는 shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- 테두리 둥근 모서리 반지름(10% 화면의 폭) -->
        </shape>
    </item>
</layer-list>
